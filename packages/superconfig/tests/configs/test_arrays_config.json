{
  "services": ["web", "api", "worker", "scheduler"],
  "ports": [8080, 8081, 8082],
  "environments": [
    {
      "name": "development",
      "config": {
        "debug": true,
        "log_level": "debug"
      }
    },
    {
      "name": "production", 
      "config": {
        "debug": false,
        "log_level": "info"
      }
    }
  ],
  "feature_flags": {
    "new_ui": true,
    "beta_features": false,
    "experimental": ["feature_a", "feature_b"]
  }
}